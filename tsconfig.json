{
  "compilerOptions": {
    "target": "esNext",
    "module": "esNext",
    "outDir": "lib",
    "lib": ["dom", "ESNext"],
    "composite": true,
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "declarationDir": "lib",
    "declarationMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "types": ["node", "ethers"],
    "rootDir": "./src/",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "helpers/types"],
    "paths": {
      "~~/*": ["./src/*"]
    }
  },
  "include": ["src", "src/**/*.json"],
  "exclude": ["lib", "node_modules", "**/node_modules", "**/node_modules/**", "../../node_modules/**/*"]
}
